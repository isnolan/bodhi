{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false
  }
}
