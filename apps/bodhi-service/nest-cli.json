{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "assets/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "modules/notice/templates/**/*"
      }
    ]
  }
}
